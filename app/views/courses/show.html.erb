<head>
<style>
body {
background-image: url("https://wallpapercave.com/wp/HVc930O.jpg");
background-size: cover;
background-position: center;
background-attachment: fixed;
}

div {
  padding-left: 15px;
}
</style>
</head>

<body>
  <div class="container-fluid">
    <br/>
<h3 class="text-warning"><%= @course.title %></h3><br/>
<h5 class="text-white"><%= @course.description %></h5>
<br/><br/>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
<p class="lead">
<u class="text-warning">Instructor</u></p>
<p class="lead text-white"><%= link_to @professor.full_name, prof_bio_path %></p>
<br/>
<u class="lead text-warning">Location</u></p>
<p class="lead text-white"><%= @professor_course.location %></p>
</div>

    <div class="col-lg-6">
<p class="lead">
<u class="text-warning">Schedule<br/></u></p>
<p class="text-white"><%= @professor_course.start_date.strftime("%B %d, %Y")
 %> - <%= @professor_course.end_date.strftime("%B %d %Y")
 %></p>
<br/>
<% @professor_course.sections.each do |section| %>
<p class="lead text-warning"><%= section.day %>s</p>
<p class="text-white"><%= section.start_time.strftime("%l:%M %P") %> - <%= section.end_time.strftime("%l:%M %P") %></p><br/><br/>
<% end %>
</div>
</div>
</div>
</body>
